<h2>
	<%= @post.title %></h2>
<div class="holder content">
	<%= simple_format(@post.content) %>
	<% if logged_in? && can_edit?(@post) %>
	<%=link_to "Edit Post", edit_post_path %>
	<% end %>

	<% if logged_in? && is_admin? %>
	|
	<%= link_to "Delete Post", post_path(@post), confirm: 'Are you sure?', method: :delete %>
	<% end %>

	<div id="clear"></div>

	<h3>Comments</h3>
	<ul id="comments">
		<%= render 'comment' %>
		<div id="clear"></div>

	</ul>
	<br />

	<%= button_to "Add Comment", new_post_comment_post_path(@post), {:method => :get, :remote => true, :id => "new_comment_button"} %>

	<div id="comment_form">
		<!-- new comment form will be rendered here -->
	</div>

</div>